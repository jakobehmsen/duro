var properties = {};

while(true) {
	log("What do you want to do?");
	var command = readLine();
	
	if(command == "set") {
		log("Enter property name: ");
		var name = readLine();
		log("Enter property value: ");
		var value = readLine();
		
		properties[name] = value;
		
		log("Property " + name + " was set to " + value + ".");
	} else if(command == "get") {
		log("Enter property name: ");
		var name = readLine();
		
		var value = properties[name];
		log(value);
	} else if(command == "pause") {
		log("Bye bye then.");
		pause;
	} else if(command == "list") {
		for(name in properties)
		    log(name + " = " + properties[name] + " ");
	} else {
		log("Valid commands are 'set', 'get', 'list' or 'pause'.");
	}
}